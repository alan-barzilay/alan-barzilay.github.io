<!doctype html>
<html lang="en">
    <head>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="p-10">
        <button
            id="toggleBtn"
            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 mb-6"
        >
            Toggle All Items
        </button>

        <div class="toggle-item p-4 mb-2 bg-gray-200 border border-gray-400">
            Item 1
        </div>
        <div class="toggle-item p-4 mb-2 bg-gray-200 border border-gray-400">
            Item 2
        </div>
        <div class="toggle-item p-4 mb-2 bg-gray-200 border border-gray-400">
            Item 3
        </div>

        <script>
            const btn = document.getElementById("toggleBtn");

            // 1. Select ALL elements that have the class 'toggle-item'
            // This returns a NodeList (similar to an array)
            const boxes = document.querySelectorAll(".toggle-item");

            btn.addEventListener("click", () => {
                // 2. Loop through the list and toggle the class for EACH one
                boxes.forEach((box) => {
                    box.classList.toggle("hidden");
                });
            });
        </script>
    </body>
</html>
