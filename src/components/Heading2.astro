---
const props = Astro.props;
---

<div class="w-fit">
  <h2 {...props}><slot /></h2>

  <div class="flex text-trace-green">
    <svg
      class="shrink-0"
      aria-hidden="true"
      width="53"
      height="24"
      viewBox="-2 -2 53 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle cx="7" cy="7" r="5.5" stroke="currentColor" stroke-width="3"
      ></circle>

      <path
        d="M 13 7 L 38 7 L 48 14 L 53 14"
        stroke="currentColor"
        stroke-width="3"></path>
    </svg>
    <svg
      aria-hidden="true"
      class="flex-1 min-w-4"
      width="1"
      height="24"
      viewBox="0 0 100 24"
      preserveAspectRatio="none"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <line
        x1="0"
        y1="16"
        x2="100"
        y2="16"
        stroke="currentColor"
        stroke-width="3"
        vector-effect="non-scaling-stroke"></line>
    </svg>

    <svg
      aria-hidden="true"
      class="-ml-px shrink-0"
      width="14"
      height="24"
      viewBox="0 0 14 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle cx="7" cy="16" r="5.5" stroke="currentColor" stroke-width="3"
      ></circle>
    </svg>
  </div>
</div>
