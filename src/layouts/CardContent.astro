---
import "../styles/global.css";
import Tag from "./Tag.astro";

const { title, tags, img_src, alt_text, date, read_time, paragrafo } =
  Astro.props;
const formattedDate = date.toLocaleDateString("pt-BR");
---

<!-- conteudo -->
<div
  class="md:grid md:grid-cols-[auto_1fr] md:grid-rows-[auto_1fr]
  flex flex-col justify-left gap-x-6 gap-y-6
  px-3 md:pl-10 md:pr-14 w-full font-mono"
>
  <img
    class="read-order-2 order-2 md:order-1 md:row-span-2 m-auto min-w-52 size-52 bg-dark-grey p-4 shadow-md shadow-black/25"
    src="/imagemsite.png"
    alt={alt_text}
  />
  <!-- texto -->
  <!-- header do card -->
  <div class="flex flex-col pt-3 order-1 md:order-2 read-order-1">
    <!-- Titulo -->
    <h2 class="text-white text-[28px] px-5 md:pt-0 pt-4">{title}</h2>

    <div
      class="grid grid-rows-[auto_1fr] grid-cols-[auto_1fr_auto] gap-y-1.5 text-trace-green"
    >
      <!-- svg firulada - row1 -->
      <svg
        aria-hidden="true"
        width="133"
        height="24"
        viewBox="-2 -2 133 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <circle cx="7" cy="7" r="5.5" stroke="currentColor" stroke-width="3"
        ></circle>

        <path
          d="M 13 7 L 118 7 L 128 14 L 133 14"
          stroke="currentColor"
          stroke-width="3"></path>
      </svg>
      <svg
        aria-hidden="true"
        class="w-full"
        height="24"
        viewBox="0 0 100 24"
        preserveAspectRatio="none"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <line
          x1="0"
          y1="16"
          x2="100"
          y2="16"
          stroke="currentColor"
          stroke-width="3"></line>
      </svg>

      <svg
        aria-hidden="true"
        class="-ml-px"
        width="14"
        height="24"
        viewBox="0 0 14 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <circle cx="7" cy="16" r="5.5" stroke="currentColor" stroke-width="3"
        ></circle>
      </svg>

      <!-- tempo de leitura -->
      <p
        class="text-trace-green w-32 font-extrabold text-center -mt-3 text-xl pl-[1ch]"
      >
        {read_time} min
      </p>
      <!-- tags -->
      <div class="flex flex-row-reverse read-flow-visual flex-wrap gap-2 pr-1">
        {tags.map((tag) => <Tag tag={tag} />)}
      </div>
    </div>
  </div>
  <!-- primeiro paragafo -->
  <div
    class="relative bg-dark-grey overflow-hidden p-3.5 mb-10 mt-auto md:mx-5 mx-3 order-3 read-order-3 shadow-md shadow-black/25"
  >
    <div
      class="absolute bg-subtext-grey rounded-l-full size-2
          right-0 top-1/2 -translate-y-1/2 translate-x-1/2"
    >
    </div>
    <p class="text-subtext-grey group-hover:text-white">
      {paragrafo}
    </p>
  </div>
</div>
<!--data   -->
<p
  class="absolute bottom-0 right-2 text-trace-green text-xs md:text-base font-mono"
>
  {formattedDate}
</p>
